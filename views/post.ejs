<%- include('header'); -%>




    <header id="background-image" style="height:250px;">

    </header>


    <div class="row container">

        <div class="col-lg-9 col-sm-12  border  rounded blog-post shadow-sm">
            <div class=" post-container">
                <div class="d-flex justify-content-between my-3">
                    <author>Authored by : Ajay C</author>
                    <h1 class="text-center mx-3">
                        <%=title%>
                    </h1>
                    <h6>
                        <%=date%>
                    </h6>

                </div>

                <section id="postImage" style="padding: 32px 32px;font-size: 1rem;">
                    <p style="word-break: break-all;">
                        <%- content %>
                    </p>
                </section>
                
               
            </div>
        </div>
        <div class="col-md-3 d-none d-lg-block">
            <div class=" " style="top: 2rem;">
                <div class="p-4 mb-3  border rounded blog-post shadow-sm">

                    <ul class="list-group list-group-flush">
                        <%-recentPost %>
                    </ul>
                </div>

                <div class="p-4 border rounded blog-post shadow-sm">
                    <h4 class=" blog-post-title">Categories</h4>
                    <ol class="list-unstyled mb-0">
                        <li><a class="btn-custom-link" href="/"><i class="fa-solid fa-house"></i></i>Home</a>
                        </li>
                        <li><a class="btn-custom-link" href="/world"><i class="fa-solid fa-earth-americas"></i>World</a>
                        </li>
                        <li><a class="btn-custom-link" href="/tech"><i class="fa-solid fa-microchip"></i>Tech</a></li>
                        <li><a class="btn-custom-link" href="/travel"><i class="fa-solid fa-plane"></i>Travel</a></li>

                    </ol>
                </div>

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-9 col-sm-12">
            <%-commentPost %>
        </div>
    </div>

  
  

    <%- include('footer'); -%>
