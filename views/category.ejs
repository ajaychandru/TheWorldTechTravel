<%- include('header'); -%>





<header id="background-image" class="py-5 bg-light border-bottom mb-4">
  <div class="container">
      <div class="text-center my-5">
          <h1 class="fw-bolder text-light">Welcome to <%=pageTitle %> Page!</h1>
         
      </div>
  </div>
</header>
  <div class="container-fluid">
    <div class="row">
       <% docs.forEach((e)=>{ %>
        <div id="home"class="col-lg-6 col-sm-12 ">
            <div
                class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative blog-post">
                <div class="col-sm-4 col-md-3 col-lg-4">
                  <img alt="no" src=<%=e.imgSrc %>>
              </div>
                <div class="col-lg-8 col-md-9 col-sm-8 p-4 d-flex flex-column position-static">
                    <strong class="d-inline-block mb-2 text-success"><%= e.category %></strong>
                    <h4 style="word-break:normal;" class="mb-0 blog-post-title"><%= e.title %></h4>
                    <div class="mb-1 text-muted"><%= e.date %></div>
                    <p style="word-break:normal;" class="card-text mb-auto blog-post-meta"><%-e.cardContent.substring(0,60)%>.....</p>
                    <a href="/<%=e.category %>/<%=e._id %>" class=" btn btn-custom mt-2">Continue reading</a>
                </div>
               
            </div>
        </div>
      <% }) %>
    
    </div>

    </div>

  </div>
  <%- include('footer'); -%>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

 
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>
</html>